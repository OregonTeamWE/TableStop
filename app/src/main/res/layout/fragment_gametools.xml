<!--            android:id="@+id/roll_result"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="1"-->
<!--            android:textSize="100dp"-->
<!--            />-->

</LinearLayout>

